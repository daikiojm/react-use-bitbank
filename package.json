{
  "name": "react-use-bitbank",
  "version": "0.2.1",
  "description": "React Hook for bitbank.cc public data",
  "author": "daikiojm",
  "repository": "daikiojm/react-use-bitbank",
  "homepage": "https://github.com/daikiojm/react-use-bitbank#readme",
  "license": "MIT",
  "keywords": [
    "react",
    "react-hooks",
    "bitbank",
    "bitbank.cc"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "fix": "prettier --write .",
    "build": "cross-env node_modules/.bin/tsc -p .",
    "clear": "cross-env rm -rf dist/",
    "push": "yarn run test && yarn run clear && yarn run build && yarn publish"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.3",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/socket.io-client": "^1.4.36",
    "cross-env": "^7.0.3",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "socket.io-mock": "^1.3.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "ts-jest"
      ]
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testEnvironment": "jsdom"
  },
  "prettier": {
    "printWidth": 140,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "socket.io-client": "2.4.0"
  }
}
